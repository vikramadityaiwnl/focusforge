{
  "name": "focusforge",
  "version": "0.0.1",
  "manifest_version": 3,
  "description": "A tool to forge strong focus and productivity habits.",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["sidePanel", "aiLanguageModelOriginTrial", "storage", "tabs"],
  "side_panel": {
    "default_path": "index.html"
  },
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "default_title": "Open focusforge"
  }
}
